[includeIf "gitdir:~/development/github.com/classi/**"]
  path = .gitconfig.local

[core]
  excludesfile = ~/.gitignore_global
  autocrlf = input
	pager = less -R -F -X -N
  ignorecase = false
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
[push]
  default = simple
[merge]
  tool = vimdiff2
[diff]
  tool = vimdiff
  indentHeuristic = true
[alias]
  ad = add
  fto = fetch -p origin
  cm = commit
  s  = status
  st = status -sb
# checkout
  co = checkout
  cob = checkout -b
  cod = checkout develop
  com = checkout master
  ac = !git add -A && git commit
  fetch-pulls = fetch origin +refs/pull/*:refs/remotes/pull/*
[ghq]
  root = ~/development
  root = ~/.go/current/src
[rebase]
  autostash=true
[credential]
	helper = osxkeychain
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[difftool]
	prompt = false
[mergetool]
	prompt = false
[commit]
	verbose = true
[mergetool]
	prompt = false

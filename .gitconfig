[core]
  excludesfile = ~/.gitignore_global
  autocrlf = input
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
[push]
  default = simple
[merge]
  tool = vimdiff
[diff]
  tool = vimdiff
[alias]
  ad = add
  fto = fetch origin
  cm = commit
  s  = status
  st = status -sb
# checkout
  co = checkout
  cob = checkout -b
  cod = checkout develop
  com = checkout master
  ac = !git add -A && git commit
  fetch-pulls = fetch origin +refs/pull/*:refs/remotes/pull/*

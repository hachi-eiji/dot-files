Bundle 'mattn/jscomplete-vim'
Bundle 'myhere/vim-nodejs-complete'
Bundle 'pangloss/vim-javascript'
" 整形
Bundle 'maksimr/vim-jsbeautify'
" 辞書
Bundle 'guileen/vim-node-dict'
Bundle 'moll/vim-node'
Bundle 'mxw/vim-jsx'

au BufRead,BufNewFile *.jsx setlocal filetype=javascript.jsx

let g:syntastic_javascript_checkers = ['eslint']
let g:syntastic_enable_signs= 1
let g:syntastic_auto_loc_list= 1

let g:jscomplete_use = ['dom', 'moz']
" 日本語入力の時にneocompleteを抑制
let g:neocomplete#lock_iminsert=1

augroup js
  autocmd!
augroup END
autocmd js FileType javascript setlocal dictionary+=$HOME/.vim/bundle/vim-node-dict/dict/node.dict
autocmd js FileType javascript setlocal omnifunc=nodejscomplete#CompleteJS
if !exists('g:neocomplcache_omni_functions')
    let g:neocomplcache_omni_functions = {}
endif
let g:neocomplcache_omni_functions.javascript = 'nodejscomplete#CompleteJS'

let g:node_usejscomplete = 1
